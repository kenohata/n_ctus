<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :department %><br />
	<%= f.select :department, %w(MA PH EE AR), selected: current_user.department %>
  </div>
  <div class="field">
    <%= f.label :grade %><br />
    <%= f.select :grade, %w(1 2 3 4), selected: current_user.profile.grade %>
  </div>
  <div class="field">
    <%= f.label :teacher %><br />
    <%= f.text_field :teacher %>
  </div>
  <div class="field">
    <%= f.label :term %><br />
    <%= f.select :term, %w(first latter) %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :kind %><br />
    <%= f.select :kind, %w(exam note report) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
