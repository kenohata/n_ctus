<%= div_for(note) do %>
	<h2><%= link_to note.title, note_path(note) %></h2>
	<span class="smaller">
	department: <%= note.department %> / 
	year: <%= note.year %> / 
	teacher: <%= note.teacher %> /
	term: <%= note.term %> / 
	kind: <%= note.kind %> / 
	created: <%= note.created_at.to_s(:short) %> / 
	updated: <%= note.updated_at.to_s(:short) %>
	</span>
<% end %>