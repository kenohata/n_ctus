<h3>Sign in</h3>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.text_field :student_id, placeholder: "Student ID" %></div>

  <div><%= f.password_field :password, placeholder: "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<span class="smaller"><%= link_to "Forgot your password?", new_password_path(resource_name) %></span><br />
<span class="smaller"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></span>

